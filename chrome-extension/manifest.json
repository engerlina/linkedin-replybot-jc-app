{
  "manifest_version": 3,
  "name": "LinkedIn Reply Bot",
  "version": "1.0.0",
  "description": "Reply to LinkedIn comments with AI and add commenters to your messaging flow",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "*://*.linkedin.com/*",
    "https://api.anthropic.com/*",
    "https://api.openai.com/*",
    "http://localhost:*/*",
    "https://*.up.railway.app/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.linkedin.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
